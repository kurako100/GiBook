<h1>書籍を投稿する</h1>

<%= form_with model: @book, local: true do |form| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "エラー") %>が発生しました:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, "タイトル" %>
    <%= form.text_field :title, required: true %>
  </div>

  <div>
    <%= form.label :author, "著者" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :comment, "コメント" %>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.label :library_id, "図書室ID" %>
    <%= form.number_field :library_id, value: 1, readonly: true %>
  </div>

  <div>
    <%= form.label :user_id, "ユーザーID" %>
    <%= form.number_field :user_id, value: 1, readonly: true %> <!-- 仮で1に設定 -->
  </div>

  <div>
    <%= form.submit "投稿する" %>
  </div>
<% end %>

<%= link_to '図書室一覧に戻る', libraries_path %>
